    "concurrently": "8.2.1",
    "firebase-tools": "12.4.7",
    "jest": "29.6.4",
    "ts-jest": "29.1.1",
    "typescript": "5.2.2"
  },
  "dependencies": {
    "firebase-admin": "11.10.1"
  }
}
